{# templates/fhir/portal/practitioner-detail.html.twig - Détail d'un praticien #}
{% extends 'layout.html.twig' %}

{% block title %}Praticien - {{ practitioner.givenName }} {{ practitioner.familyName }}{% endblock %}

{% block content %}
<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('fhir_portal_index') }}">Accueil</a></li>
            <li class="breadcrumb-item active">Praticien</li>
        </ol>
    </nav>
    
    <div class="row">
        <div class="col-md-8">
            <h1>
                {{ practitioner.title|default('') }}
                {{ practitioner.givenName }} 
                {{ practitioner.familyName }}
            </h1>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Informations professionnelles</h5>
                </div>
                <div class="card-body">
                    <p><strong>Numéro professionnel:</strong> {{ practitioner.professionalId }}</p>
                    <p><strong>Spécialité:</strong> {{ practitioner.specialty|default('-') }}</p>
                    <p><strong>Code spécialité:</strong> {{ practitioner.specialtyCode|default('-') }}</p>
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Contact</h5>
                </div>
                <div class="card-body">
                    <p><strong>Téléphone:</strong> {{ practitioner.phone|default('-') }}</p>
                    <p><strong>Email:</strong> {{ practitioner.email|default('-') }}</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <button class="btn btn-primary w-100 mb-2" onclick="showFhirJson()">
                        <i class="fas fa-code"></i> Voir JSON FHIR
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}